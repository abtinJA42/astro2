<% layout('layouts/boilerplate') %> 
    <h1 class="mb-5">All Camps</h1>
    <div>
        <a class="btn btn-outline-success mb-5" href="/campgrounds/new">Add Camp</a>
    </div>
        <% for(let campground of campgrounds){%>
          <div class="card" mb-3>
              <div class="row">
                  <div class="col-md-4">
                      <img src="<%= campground.image %> " class="img-fluid" alt="">
                  </div>
                  <div class="col-md-8">
                  <div class="card-body">
                      <h5 class="card-title"><%= campground.title %></h5>
                      <p class="card-text"> <%= campground.description%> </p>
                      <p class="card-text">
                          <small class="text-muted fa fa-map-marker"><%= campground.location %> </small>
                      </p>
                      <a class="btn btn-primary" href="/campgrounds/<%= campground._id %> ">View <%= campground.title %> </a>
                  </div>
                  </div>
              </div>
          </div>
            <%  } %> 
 

